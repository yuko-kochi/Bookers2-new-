<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
<table>
  <thead>
    <tr>
      <td>
        <th>name</th>
        <th><%= @user.name %></th>
      </td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </td>
    </tr>
  </tbody>
</table>

<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>

 <%= f.label :title, "Title" %>
 <%= f.text_field :title, class: 'form-control book_title' %>

 <%= f.label :body, "Opinion" %>
 <%= f.text_area :body, class: 'form-control book_title' %>

 <%= f.submit 'Create Book' %>

<% end %>

<h1>Book detail</h1>
<table>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@user) do %>
         <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
         <%= @user.name %>
        <% end %>
      </td>
      <td><%=link_to @book_id.title, book_path %></td>
      <td><%= @book_id.body %></td>
      <% if @book_id.user_id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book_id) %></td>
        <td> <%= link_to "Destory", book_path(@book_id), method: :delete, data: {confirm: '本当に消しますか？'}  %></td>
      <% end %>
    </tr>
  </tbody>
</table>
